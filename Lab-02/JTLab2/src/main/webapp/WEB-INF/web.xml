<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.ReadInitListener</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>category</param-name>
        <param-value>default</param-value>
    </context-param>
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>com.ddf.filters.LogFilter</filter-class>
    </filter>
    <filter>
        <filter-name>decorator</filter-name>
        <filter-class>com.ddf.filters.DecoratorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>decorator</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
</web-app>
